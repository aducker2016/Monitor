<Window x:Class="Monitor.TipsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TipsWindow" Height="300" Width="300" AllowsTransparency="True" WindowStyle="None" MouseDown="Window_MouseDown" Background="{x:Null}" Closed="Window_Closed" ShowInTaskbar="False" Topmost="True">
    <Grid>
        <Border CornerRadius="3" Margin="10" BorderThickness="1"  BorderBrush="Gray" Opacity="0.8">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" Color="#FF414141" BlurRadius="8"/>
            </Border.Effect>
            <Border Opacity="0.4" Margin="0" CornerRadius="3" Background="Black">
            </Border>
        </Border>
        <Grid>
            <Border CornerRadius="3" Margin="10,150,10,10" BorderThickness="1"  BorderBrush="Gray" Background="White"/>
            <TextBox x:Name="TextReceive" Margin="11,80,11,15" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" BorderThickness="0"/>
            <Button Content="关闭" HorizontalAlignment="Right" Margin="0,10,20,0" VerticalAlignment="Top" Width="44" Click="Button_Click" Background="#FF595959" Foreground="#FFCDCDCD" BorderBrush="#FF666666"/>
            <Label Content="监控信息" Margin="25,23,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30" FontWeight="Bold"/>
        </Grid>
    </Grid>
</Window>
